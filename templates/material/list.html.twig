{% extends 'base.html.twig' %}

{% block title %}Hello MaterialController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div>
        {% for material in materials %}
            <div>
                <p>{{ material.name }}</p>
                <p>{{ material.description }}</p>
                <p>{{ material.uuid }}</p>
                {% for categorie in material.categories %}
                    <p>{{ categorie.name }}</p>

                {% endfor %}
                <a href={{ path('app_material_details', {'uuid':material.uuid})}}>Details</a>
            </div>

        {% endfor %}
    </div>
{% endblock %}
