{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>LocaSport</h1>
        {% for article in articles %}
            <div>
                <h2>{{ article.title }}</h2>
                <p>{{ article.content }}</p>
                <a href={{ path('app_article_details', {'id':article.id}) }}>Details</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
